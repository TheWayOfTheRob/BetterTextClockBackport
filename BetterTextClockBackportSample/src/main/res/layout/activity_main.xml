            app:format12Hour="yyyy年M月d日 E a好"
            app:format24Hour="yyyy年M月d日 E a好" />

        <net.imknown.bettertextclockbackportlibrary.TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:format12Hour="yyyy年MM月dd日 EEEE aa好\n"
            app:format24Hour="yyyy年MM月dd日 EEEE aa好\n" />

        <!-- ===================================================== -->

        <net.imknown.bettertextclockbackportlibrary.TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:forceUse="format12"
            app:format12Hour="美国时间  GMT-6 强制ｈ12小时 现在是 a h:m:s"
            app:timeZone="GMT-6" />

        <net.imknown.bettertextclockbackportlibrary.TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:forceUse="format12"
            app:format12Hour="日本时间  GMT+9 强制ｈ12小时 现在是 a h:m:s\n"
